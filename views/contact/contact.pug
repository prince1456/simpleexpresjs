extend ../layout


block content
  .row
    .col-md-4
      h1.main-header#question-title Contact us

      p Please send us your feedback.

    .col-md-8
      form(method='POST', action='/contact')
        .form-group
          label(for='name') Name
          input.form-control#title(name='name')
        .form-group
          label(for='contact') Contact
          input.form-control#title(name='contact')
        .form-group
          label(for='department') department
          select.form-control
            each department, i in departments
              option(value=i) #{department}
        .form-group
          label(for='message') Message
          textarea.form-control#title(name='message')
        input.btn.btn-primary(type='submit')
